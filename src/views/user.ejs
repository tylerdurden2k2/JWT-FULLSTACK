<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- Latest compiled and minified CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>User Page</title>
    </head>
    <body>
        <div class="user-page-container">
            <form method="POST" action="/users/create-user">
                <div class="container p-3">
                    <h1 style="text-align: center">Create user's account</h1>
                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <label for="email" class="form-label"
                                >Email address</label
                            >
                            <input
                                type="email"
                                class="form-control"
                                id="email"
                                required
                                name="email"
                            />
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label for="password" class="form-label"
                                >Password</label
                            >
                            <input
                                type="password"
                                class="form-control"
                                id="password"
                                required
                                name="password"
                            />
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label for="username" class="form-label"
                                >User Name</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="username"
                                required
                                name="username"
                            />
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label for="description" class="form-label"
                                >Description</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="description"
                                disabled
                            />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Submit
                    </button>
                    <table
                        class="table table-light table-striped table-hover table-bordered"
                    >
                        <h3 style="text-align: center" class="my-2">
                            List Users
                        </h3>
                        <thead class="table-warning">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Email</th>
                                <th scope="col">User Name</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% listUsers.map((item,index) =>{%>
                            <tr>
                                <th scope="row"><%= index + 1 %></th>
                                <td><%= item.email %></td>
                                <td><%= item.username %></td>
                                <td>
                                    <button
                                        type="submit"
                                        class="btn btn-primary"
                                    >
                                        Edit
                                    </button>
                                    <form
                                        style="display: inline-block"
                                        action="/users/delete-user/<%= item.id %>"
                                        method="POST"
                                    >
                                        <button
                                            type="submit"
                                            class="btn btn-danger"
                                        >
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </body>
</html>
